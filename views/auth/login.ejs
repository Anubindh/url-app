<h2>Login</h2>
<% if (typeof error !== 'undefined') { %>
  <p style="color: red;"><%= error %></p>
<% } %>
<form action="/login" method="POST">
  <input name="username" placeholder="Username" required />
  <input type="password" name="password" placeholder="Password" required />
  <button>Login</button>
</form>
